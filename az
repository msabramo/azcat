#!/usr/bin/env python3
import os
import sys
import webbrowser
from getpass import getuser

# for debugging
sys.path.insert(0, os.getcwd())

import azcat

HELP = """\
Usage: az file
A alternative to cat(1); specialized for printing files.

Options:
  --help  print this message

Examples:
  $ az hello.py
  $ curl -L http://httpbin.org/headers | az

Version:
  0.21
"""

def main ():
    # one program, one easter egg
    if getuser().upper() == "YUI" and os.getcwd() == "azunyan nyan nyan azunyan nyan nyan":
        print("azcat: mou!")
        webbrowser.open("http://www.pixiv.net/member_illust.php?mode=medium&illust_id=29734557")

    try:
        if sys.argv[1] == "--help":
            print(HELP)
            sys.exit()
        filepath = sys.argv[1]
    except IndexError:
        filepath = "/dev/stdin"

    if not os.path.exists(filepath):
        sys.exit("azcat: no such a file: %s" % filepath)

    azcat.main(filepath)

if __name__ == "__main__":
    main()
